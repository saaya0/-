  <div class="alert">
    <% if @spot.errors.any? %>
      <%= @spot.errors.count %> errors<br>
      <% @spot.errors.full_messages.each do |message| %>
       â˜† <%= message %><br>
      <% end %>
    <% end %>
  </div>
<%= form_with(model:@spot, local: true) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-lg-4"></div>
      <div class="col-lg-6">
        <table>
          <tr>
            <th><%= f.label :spot_name %></th>
            <td><%= f.text_field :spot_name %></td>
          </tr>
          <tr>
            <th><%= f.label :post_code %></th>
            <td><%= f.text_field :post_code %></td>
          </tr>
          <tr>
            <th><%= f.label :address %></th>
            <td><%= f.text_field :address, class: 'from-control' %></td>
          </tr>
           <tr>
            <th><%= f.label :spot_text %></th>
            <td><%= f.text_area :spot_text %></td>
          </tr>
          <tr>
            <th><%= f.label :phot %></th>
            <td><%= f.attachment_field :spot_img %></td>
          </tr>
        <tr>
          <td>
            <%= f.collection_check_boxes(:box_ids, Box.all, :id, :box_name) do |box| %>
              <div class='form-check'>
                <%= box.label class: 'form-check-label' do %>
                  <%= box.check_box class: 'form-check-input' %>
                  <%= box.text %>
                <% end %>
              </div>
            <% end %>
          </td>
        </tr>

          <tr>
            <th><%= button_tag 'create<i class="fa fa-save"></i>'.html_safe, :type => "submit", :class =>"btn btn-outline-primary" %></th>
          </tr>
      </div>
    </th>
  </tr>
        </table>
      </div>
      <div class="col-lg-4"></div>
    </div>
  </div>


<% end %>