  <div class="new-comment">
    <h2>Contact</h2>

    <% if @message.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

  <%= form_with model: @message, local: true, url: {action: :confirm} do |f| %>
    <div>
      <%= f.label :name, 'name' %><br>
      <p><%= f.text_field :name, autofocus: true, placeholder:'山田　太郎（20文字以内）' %></p>
  　</div>
  　<div>
  　 <%= f.label :email, 'e-mail' %><br>
  　 <p><%= f.text_field :email,  placeholder:'test@hoge.com' %></p>
  　</div>
  　<div>
  　  <%= f.label :message, 'message' %><br>
  　  <%= f.text_area :message, placeholder:'10文字以上でお願いします' %>
　  </div>
　  <%= f.submit '確認画面へ' %>
  <% end %>
</div>